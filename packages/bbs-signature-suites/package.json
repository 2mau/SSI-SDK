{
  "name": "@sphereon/bbs-signature-suites",
  "version": "0.5.0",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "veramo": {
    "pluginInterfaces": {
      "IVcLocalIssuerJsonLd": "./src/types/ICredentialHandlerLDLocal.ts"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "build:copyfiles": "copyfiles src/contexts/*.* ./dist",
    "generate-plugin-schema": "yarn veramo dev generate-plugin-schema",
    "build:main": "tsc -p tsconfig.main.json",
    "build:browser": "tsc -p tsconfig.browser.json",
    "build:module": "tsc -p tsconfig.module.json",
    "clean": "rimraf dist coverage",
    "uninstall": "rimraf node_modules",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"{lib,test}/**/*.ts\" --write",
    "fix:lint": "eslint . --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint . --ext .ts",
    "test:prettier": "prettier \"{lib,test}/**/*.ts\" --list-different",
    "test:unit": "jest",
    "test:cov": "jest --ci --coverage && codecov",
    "bbs-create-keypair": "ts-node src/bbs-create-keypair.ts",
    "bbs-sign-vc": "ts-node src/bbs-sign-vc.ts",
    "bbs-derive-vc": "ts-node src/bbs-derive-vc.ts",
    "bbs-derive-vp": "ts-node src/bbs-derive-vp.ts",
    "bbs-verify-vc": "ts-node src/bbs-verify-vc.ts"
  },
  "dependencies": {
    "@mattrglobal/bls12381-key-pair": "^1.0.0",
    "@mattrglobal/jsonld-signatures-bbs": "^1.0.1",
    "@mattrglobal/node-bbs-signatures": "^0.13.0",
    "@sphereon/pex": "^1.0.2",
    "@sphereon/pex-models": "^1.1.0",
    "@sphereon/ssi-sdk-vc-handler-ld-local": "^0.5.0",
    "cross-fetch": "^3.1.5",
    "jsonpath": "^1.1.1",
    "nanoid": "^3.1.25"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/jsonpath": "^0.2.0",
    "@types/node": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "codecov": "^3.8.3",
    "cspell": "^5.19.7",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^27.2.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^7.0.1",
    "prettier": "^2.4.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "src/contexts",
    "README.md",
    "plugin.schema.json",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "git@github.com:Sphereon-Opensource/SSI-SDK.git",
  "author": "Sphereon <dev@sphereon.com>",
  "license": "Apache-2.0",
  "keywords": [
    "Sphereon",
    "SSI",
    "Veramo",
    "W3C",
    "Verifiable Credentials",
    "Verifiable Presentations",
    "JsonLd"
  ]
}
